---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero';
import ProjectGrid from '../components/ProjectGrid';
import ExperienceMap from '../components/ExperienceMap';
import SkillsRadar from '../components/SkillsRadar';
import CareerTimeline from '../components/CareerTimeline';
import StatsCounter from '../components/StatsCounter';
---

<Layout title="Ross Volkwein | PE, GISP">
  <Hero client:load />

  <section id="expertise" className="py-20 relative">
    <div className="container mx-auto px-6">
      <div className="grid grid-cols-1 lg:grid-cols-12 gap-8 items-center">
        {/* Text and Stats - Left Side */}
        <div className="lg:col-span-7 relative">
          
          {/* Vertical Decorative Line */}
          <div className="absolute -left-6 top-2 bottom-2 w-1 bg-indigo-500 rounded-full hidden lg:block"></div>

          <h2 className="text-4xl md:text-6xl font-extrabold text-slate-900 dark:text-slate-100 mb-6 tracking-tight uppercase leading-none">
            Technical<br/> <span className="text-transparent bg-clip-text bg-gradient-to-r from-indigo-600 to-sky-500">Expertise</span>
          </h2>
          <p className="font-mono text-lg text-slate-700 dark:text-slate-300 mb-8 leading-relaxed max-w-2xl">
            Combining traditional civil engineering principles with modern data science and software development to solve complex water resource challenges.
          </p>
          
          <div className="max-w-md">
            <StatsCounter client:visible />
          </div>
        </div>
        
        {/* Radar Chart - Right Side */}
        <div className="lg:col-span-5 flex justify-center lg:justify-end mt-12 lg:mt-0">
          <div className="w-full">
             <SkillsRadar client:visible />
          </div>
        </div>
      </div>
    </div>
  </section>

  <section id="timeline" className="py-10 bg-gradient-to-b from-transparent to-white/50 dark:to-slate-900/50">
    <CareerTimeline client:visible />
  </section>

  <section id="projects" className="py-20">
    <div className="container mx-auto px-6">
      <div className="text-center mb-16">
        <h2 className="text-4xl md:text-5xl font-extrabold text-slate-900 dark:text-slate-100 mb-6 tracking-tight uppercase">Project Portfolio</h2>
        <p className="font-mono text-slate-600 dark:text-slate-400 max-w-2xl mx-auto">
          A collection of projects showcasing work in Hydraulic Modeling, GIS, and custom software solutions.
        </p>
      </div>

      <div className="mb-16">
        <ExperienceMap client:only="react" />
      </div>

      <ProjectGrid client:load />
    </div>
  </section>
</Layout>
