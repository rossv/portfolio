---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero';
import WaterBanner from '../components/WaterBanner.astro';
import ProjectDashboard from '../components/ProjectDashboard';
import ExperienceMap from '../components/ExperienceMap';
import SkillsRadar from '../components/SkillsRadar';
import CareerTimeline from '../components/CareerTimeline';
import Achievements from '../components/Achievements';



import FloatingIcons from '../components/FloatingIcons';
import HexGridSection from '../components/HexGridSection';
import Footer from '../components/Footer';
---

<Layout title="Ross Volkwein | PE, GISP">
  <WaterBanner />
  <Hero client:load />



  <section id="skills" class="py-10 relative z-10 overflow-hidden min-h-[600px] flex flex-col items-center gap-20">
      <FloatingIcons client:visible />
      <div class="container mx-auto px-6 flex justify-center relative z-10">
        <SkillsRadar client:visible />
      </div>
      
      <div class="w-full relative z-10">
        <HexGridSection client:visible />
      </div>
  </section>

  <section id="timeline" class="py-10 bg-gradient-to-b from-transparent to-white/50 dark:to-slate-900/50">
    <CareerTimeline client:visible />
  </section>

  <Achievements client:visible />

  <section id="projects" class="py-20">
    <div class="w-full max-w-[95%] mx-auto px-6">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-extrabold text-slate-900 dark:text-slate-100 mb-6 tracking-tight uppercase">Project Portfolio</h2>
        <p class="font-mono text-slate-600 dark:text-slate-400 max-w-2xl mx-auto">
          A collection of projects showcasing work in Hydraulic Modeling, GIS, and custom software solutions.
        </p>
      </div>

      <div className="mb-16">
        <ExperienceMap client:only="react" />
      </div>

      <ProjectDashboard client:load />
    </div>
  </section>

  <Footer client:visible />
</Layout>
