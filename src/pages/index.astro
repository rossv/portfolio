---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero';
import WaterBanner from '../components/WaterBanner.astro';
import ProjectPortfolio from '../components/ProjectPortfolio';
import SkillsRadar from '../components/SkillsRadar';
import CareerTimeline from '../components/CareerTimeline';
import Achievements from '../components/Achievements';
import NewsSection from '../components/NewsSection';



import FloatingIcons from '../components/FloatingIcons';
import HexGridSection from '../components/HexGridSection';
import Footer from '../components/Footer';
---

<Layout
  title="Ross Volkwein | PE, GISP"
  description="Engineering and geospatial portfolio of Ross Volkwein featuring hydraulic modeling, GIS solutions, and software projects."
  canonicalPath="/"
  ogImage="/favicon.svg"
>
  <WaterBanner />
  <Hero client:idle />



  <section id="skills" class="section-shell relative z-10 overflow-hidden min-h-[600px] flex flex-col items-center gap-10 md:gap-20">
      <FloatingIcons client:media="(min-width: 1024px) and (hover: hover) and (pointer: fine)" />
      <div class="container mx-auto px-6 flex justify-center relative z-10">
        <SkillsRadar client:visible />
      </div>
      
      <div class="w-full relative z-10">
        <HexGridSection client:idle />
      </div>
  </section>

  <section id="timeline" class="section-shell section-shell--alt bg-transparent">
    <CareerTimeline client:idle />
  </section>

  <Achievements client:visible />

  <NewsSection client:idle />

  <section id="projects" class="section-shell pb-8 md:pb-12">
    <div class="w-full max-w-[95%] mx-auto px-6 border-b border-slate-200/60 dark:border-slate-700/40 pb-8 md:pb-10">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-extrabold text-slate-900 dark:text-slate-100 mb-6 tracking-tight uppercase">Project Portfolio</h2>
        <p class="font-mono text-slate-600 dark:text-slate-400 max-w-2xl mx-auto">
          A collection of projects showcasing work in Hydraulic Modeling, GIS, and custom software solutions.
        </p>
      </div>

      <ProjectPortfolio client:visible />
    </div>
  </section>

  <Footer />
</Layout>
